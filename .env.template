# Copy this file to .env and fill in your values
# DO NOT commit .env to version control - it contains sensitive credentials

# ============================================================================
# REQUIRED: CardDAV Server Configuration
# ============================================================================
CARDAV_SERVER_URL=https://your-server.com/dav/addressbooks/
CARDAV_USERNAME=your-username
CARDAV_PASSWORD=your-password

# ============================================================================
# REQUIRED: CalDAV Server Configuration
# ============================================================================
CALDAV_SERVER_URL=https://your-server.com/dav/calendars/your-username/
CALDAV_USERNAME=your-username
CALDAV_PASSWORD=your-password

# ============================================================================
# OPTIONAL: Birthday Event Configuration
# ============================================================================
# Event title template - {name} will be replaced with contact name
BIRTHDAY_EVENT_TITLE=ðŸŽ‚ {name}'s Birthday

# Event description template
BIRTHDAY_EVENT_DESCRIPTION=Birthday of {name}

# Days before birthday to create reminders (comma-separated)
BIRTHDAY_REMINDER_DAYS=1,7

# Reminder message template - {name} and {days} will be replaced
BIRTHDAY_REMINDER_MESSAGE=Reminder: {name}'s birthday is in {days} days!

# Event category for organization
BIRTHDAY_EVENT_CATEGORY=Birthday

# Whether to update existing events when templates change
BIRTHDAY_UPDATE_EXISTING=true

# ============================================================================
# OPTIONAL: Scheduling Configuration
# ============================================================================
# Run mode: daemon (continuous), once (single run)
RUN_MODE=daemon

# Cron-style schedule for sync operations (daily at 6 AM)
SYNC_SCHEDULE=0 6 * * *

# Cron-style schedule for diagnostic checks (weekly on Sunday at 7 AM)
DIAGNOSTIC_SCHEDULE=0 7 * * 0

# Alternative: sync every N hours instead of cron (0 = use cron)
SYNC_INTERVAL_HOURS=0

# Seconds to wait before first sync on startup
STARTUP_DELAY=30

# ============================================================================
# OPTIONAL: Service Configuration
# ============================================================================
# Enable debug mode for verbose logging
DEBUG=false

# Container timezone
TZ=UTC

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Write logs to file in addition to console
LOG_TO_FILE=false

# Enable connectivity testing during health checks (slower)
HEALTH_CHECK_CONNECTIVITY=false

